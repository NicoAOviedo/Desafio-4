        header h1 {
            margin: 0;
        }

        main {
            margin: 20px;
        }

        li{
            font-size: larger;
            list-style: none;
            margin: 10px;
        }

        footer {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
        }
        ul{
            display: flex;
            align-items: center;
            justify-content: center;
            
        }
        .box{
            align-items: center;
            justify-content: center;
            flex-wrap: wrap;
            flex-direction: row;
            display: flex;
        }
        .unidad{
            border-radius: 5px;
            align-items: center;
            display: flex;
            background-color: rgba(144, 144, 144, 0.495);
            margin: 20px;
            max-height: 250;
            min-height: 250px;
            max-width: 450px;
            min-width: 450px;
        }
